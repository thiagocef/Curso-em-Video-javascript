function encherCopo(){
    var c = 1
    do {
        if (c == 6) {
            console.log(`Copos completamente cheios!`)
            
        } else {

            console.log(`Enchendo copo ${c}...`)
            c++
        } 
    } while (c <= 6)
}
console.log = encherCopo()